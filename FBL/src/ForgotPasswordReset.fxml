<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ForgotPasswordController">
    <top>
        <AnchorPane prefHeight="70.0" prefWidth="800.0" styleClass="topbar" stylesheets="@CommonStyles.css" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#back" prefHeight="40.0" prefWidth="40.0" text="&lt;" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="15.0">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font></Button>
                <Label alignment="CENTER_RIGHT" layoutX="389.0" layoutY="19.0" text="FacebookLite | Reset Password" textFill="WHITE" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="19.0">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="questionLabel" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="120.0" />
                <TextField fx:id="answerField" layoutY="139.0" promptText="Write your answer here" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="170.0" />
                <Label fx:id="matchingErrorNotice" layoutX="30.0" layoutY="130.0" text="Answer not matched. Password is not reset." AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="230.0" />
                <PasswordField fx:id="newPasswordField" promptText="Set new password" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="305.0" />
            </children>
        </AnchorPane>
    </center>
    <left>
        <AnchorPane prefHeight="530.0" prefWidth="210.0" BorderPane.alignment="CENTER">
            <children>
            <Label layoutX="156.0" layoutY="185.0" text="Question" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="120.0" />
                <Label layoutX="144.0" layoutY="176.0" text="Answer" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="175.0" />
            <Label layoutX="156.0" layoutY="185.0" text="New password" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="310.0" />
            </children>
        </AnchorPane>
    </left>
    <bottom>
        <AnchorPane prefHeight="90.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#resetPassword" prefHeight="30.0" prefWidth="150.0" text="Reset Password" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="20.0" />
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
